generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String
  username String
  roles    String[]
}

model UserStoryRating {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  reviewerId String   @db.ObjectId
  revieweeId String   @db.ObjectId
  metric     Json
  comments   String[]
}
