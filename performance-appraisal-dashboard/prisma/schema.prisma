generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model Users {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String
  username String
  roles    Role
  teams    String[]
}

model Questions {
  id          String           @id @default(auto()) @map("_id") @db.ObjectId
  question    String
  category    QuestionCategory
  isOpenEnded Boolean
  followUpQuestion Boolean
}


model Surveys {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  creatorId String

  devQuestionList     Json[]
  reQuestionList      Json[]
  managerQuestionList Json[]
}

model AnswerList {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  reviewerId String
  revieweeId String
  surveyId   String
  answers    Json[]
}

model Teams {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  members String[]
}

enum Role {
  USER
  RE
  MANAGER
}

enum QuestionCategory {
  UserStoryRating
  Communication
  Time_Management
  Technical_Proficiency
  User_Story_Quality
  PerformanceFeedback
}
