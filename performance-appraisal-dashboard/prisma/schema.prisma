generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model Users {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String
  username String
  roles    Role
}

model Questions {
  id               String           @id @default(auto()) @map("_id") @db.ObjectId
  question         String
  category         QuestionCategory
  isOpenEnded      Boolean
  followUpQuestion Boolean
}

model Surveys {
  id                  String @id @default(auto()) @map("_id") @db.ObjectId
  name                String
  creatorId           String
  devQuestionList     Json[]
  reQuestionList      Json[]
  managerQuestionList Json[]
}

model AnswerList {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  reviewerId  String
  revieweeId  String
  surveyId    String
  type        Role
  answers     Json[]
  isCompleted Boolean
  createdAt   DateTime
}

model Teams {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  members String[]
}

enum Role {
  DEV
  RE
  MANAGER
}

enum QuestionCategory {
  User_Story_Quality
  Communication
  Time_Management
  Technical_Proficiency
  PerformanceFeedback
}
