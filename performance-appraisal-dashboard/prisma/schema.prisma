generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String
  username String
  roles    Role
}

model Questions {
  id       String           @id @default(auto()) @map("_id") @db.ObjectId
  question String
  category QuestionCategory
}

model Surveys {
  id                  String @id @default(auto()) @map("_id") @db.ObjectId
  name                String
  creatorId           String
  devQuestionList     Json[]
  reQuestionList      Json[]
  managerQuestionList Json[]
}

model AnswerList {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  reviewerId  String
  revieweeId  String
  answers     Json[]
  isCompleted Boolean
}

model Teams {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  members String[]
}

enum Role {
  USER
  RE
  MANAGER
}

enum QuestionCategory {
  UserStoryRating
  Communication
}
